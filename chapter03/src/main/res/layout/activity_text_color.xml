<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_code_system"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="系统自带字体颜色(java)"
        android:textSize="30sp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/tv_code_sixth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="六位十六进制字体颜色(java)"
        android:textSize="30sp"
        android:textColor="#ff0000ff"/>

    <TextView
        android:id="@+id/tv_code_eighteen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="八位十六进制字体颜色(java)"
        android:textSize="30sp"/>

    <TextView
        android:id="@+id/tv_code_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="字体背景颜色(java)"
        android:textSize="30sp"
        android:background="#ff0000"/>
</LinearLayout>